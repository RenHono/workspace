<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.day2_3.MainActivity" >

    <TextView
        android:id="@+id/u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="username" />

    <EditText
        android:id="@+id/ut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/u"
        android:layout_toRightOf="@id/u" />

    <TextView
        android:id="@+id/p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/u"
 
        android:text="password" />

    <EditText
        android:id="@+id/pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ut"
             android:layout_alignBaseline="@id/p"
        android:layout_toRightOf="@id/p"
         />
    <Button 
    android:id="@+id/cz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置"
               android:layout_alignParentRight="true"
        android:layout_below="@id/pt"
        
        
        
        />
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
   android:layout_toLeftOf="@id/cz"
   android:layout_alignTop="@id/cz"
        
        />

</RelativeLayout>