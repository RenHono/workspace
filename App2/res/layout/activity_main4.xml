<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.day2_3.MainActivity" >

    <TextView
        android:id="@+id/tvcenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:layout_marginLeft="100dp"
        android:text="信息" />
    <TextView
        android:id="@+id/tvsecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvcenter"
        android:layout_alignRight="@id/tvcenter"
        android:background="@android:color/holo_orange_light"
        android:text="与其他控件的末端对齐" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvsecond"
        android:layout_alignLeft="@id/tvsecond"
        android:background="@android:color/holo_red_light"
        android:text="与其他控件的前端对齐" />

</RelativeLayout>
